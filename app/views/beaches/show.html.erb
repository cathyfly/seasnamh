<div class="container">
  <div class="text-center">

<p id="notice"><%= notice %></p>

<h1>

  <%= @beach.title %>
</h1>

<p>
  <strong>Description:</strong>
  <%= @beach.description %>
</p>


    <p></p><%=  link_to 'Click to view on map',"#{@beach.location}", target: :_blank  %> </br></p>

<p>
  <strong>Tide dependency:</strong>
  <%= @beach.tide_dependency %>
</p>

<p>
  <strong>Water quality:</strong>
  <%= @beach.water_quality %>
</p>


  <em>last tested:
  <%= @beach.water_quality_date %>
</em>

<p>
  <strong>Warnings:</strong>
  <%= @beach.warnings %>
</p>



<!-- Display the reviews of a beach -->
<h2>Reviews</h2>
<% @beach.reviews.each do |review| %>
  <p>
    <b>Review details:</b>
    <%= review.details %>
  </p>
<% end %>
<%= link_to 'Back', beaches_path %>
<% if user_signed_in? %>
  <%= link_to 'New review', new_beach_review_path(@beach) %>
<% end %>

<!--<#%= link_to 'New review', new_beach_review_path(@beach) %>

<#%= link_to 'Show Reviews', beach_reviews_path(@beach) %>-->

<% if current_user.try(:admin?) %>
<%= link_to 'Edit', edit_beach_path(@beach) %>

<% end %>

  </div>
</div>
